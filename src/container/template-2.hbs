<div class="page">
	<div class="page_content">
		<header class="page_block">
			<div class="header">
				<div class="">
					{{> logo}}
				</div>
				<nav class="header_nav">
					{{!-- {{> nav list=header isVertical=true}} --}}
					{{!-- Шаблонізатор посилається(>) до (nav компонента), який той вже має {{#each list}} ("list"
					(можна
					будь-яке
					слово)), а вже тут в контейнері шаблонізатор каже що (list дорівнює header), тобто header з
					енд-поінта!
					--}}
					<div class=".header_nav_right">
						{{> nav list=header}}
					</div>
				</nav>
			</div>

		</header>

		{{!-- {{> hero data=hero}}
		викликаємо ( >hero) і вказуєм що (дані (data)) будуть приходити в змінній (hero що знаходиться в
		енд-поінті) --}}
		<section class="page_block">
			<div class="hero">
				{{#with hero}}
				{{> hero title=title text=text}}
				<a class="button" href="{{button.url}}">{{button.text}}</a>
				{{/with}}
			</div>
		</section>

		{{!-- title і text, що знаходяться в компоненті "hero" дорівнюють шляху в енд-поінті (hero.title)(hero.text)
		--}}

		<section class="page_block">
			{{!-- Гнучка система позиціювання {flex-container} --}}
			<div class="flex-container">
				{{#each preview}}
				<div class="flex-item">
					{{> cardPreview data=this}}
				</div>
				{{/each}}
			</div>
		</section>

		<main class="page_block">
			<div class="main">
				<div class="row g-0">
					<div class="col-12">
						<div class="list_header">
							<div class="col-6">
								<h2 class="list_title">List of posts</h2>
							</div>
							<div>
								<div class="category_list">
									{{#each categories}}
									<button class="category_button">{{text}}</button>
									{{/each}}
								</div>
							</div>
						</div>
					</div>

					<div class="col-7">
						<div class="list">
							{{#each news}}
							{{> cardPost data=this}}
							{{/each}}
						</div>
					</div>

					<div class="col-5">
						<aside class="list_aside">
							<div class="about">
								<h4 class="about_title">About</h4>
								<p class="about_text">{{about}}</p>
							</div>

							{{> linkList data=archive title="Archives"}}

							{{> linkList data=social title="Social"}}
						</aside>
					</div>
				</div>
			</div>
		</main>

		<footer class="page_block">
			{{> divider}}
			<div class="footer">
				<div>
					{{> logo}}
					<span class="footer_copyright">Copyright 2023-2024</span>
				</div>

				{{#each footer}}
				<div class="col-3">
					<span class="footer_title">{{title}}</span>
					{{> nav list=links isVertical=true}}
				</div>
				{{/each}}

			</div>
		</footer>
	</div>
</div>