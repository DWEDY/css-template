<header class="header">
	<a href="#test">
		{{> logo}}
	</a>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<h2 class="form_title">{{title}}</h2>

		<div class="form_input_list">
			{{#each inputs}}
			<input class="form_input" name="{{name}}" type="{{type}}" placeholder="{{placeholder}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>

	</form>
	{{/with}}
</main>

{{#with updates}}
<div class="updates">
	<h2 class="upd_title">{{title}}</h2>

	{{#each list}}
	<div class="upd_block">
		<img class="upd_img" src="/img/wallpaper01.png" alt="Update image">
		<div>
			<div class="upd_nickname">{{nickname}}</div>
			<div class="upd_description">{{description}}</div>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a class="show_all" href="{{url}}">{{text}}</a>
	{{/with}}
</div>
{{/with}}


<div class="expirience">
	{{#with expirience}}
	<div class="exp_title">
		{{title}}
		{{badge}}
	</div>
	<div class="exp_block">
		{{#each list}}
		<div class="exp_list">
			<div class="exp_name">{{name}}</div>
			<div class="exp_details">{{details}}</div>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>




<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>